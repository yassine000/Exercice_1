using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace OOBJ_TP1_Exercice1
{
    class Batiment
    {

        protected int anneeConstruction;
        protected double surface;
        protected string adresse;

        //Constructeur de la classe batiment 
        public Batiment(int anneeConstruction, double surface, string adresse)
        {
            this.anneeConstruction = anneeConstruction;
            this.surface = surface;
            this.adresse = adresse;
        }

        public int AnneeConstruction
        {
            get { return anneeConstruction; }
            set { anneeConstruction = value; }
        }

        public double Surface
        {
            get { return surface; }
            set { surface = value; }
        }

        public string Adresse
        {
            get { return adresse; }
            set { adresse = value; }
        }

        //methode toString() return une chaine de caractères contenant toutes les informations d'un Batiment  
        public string toString()
        {
            return "Année de Construction: " + anneeConstruction + ", Surface: " + surface + ", Adresse: " + adresse;
        }

    }
}
